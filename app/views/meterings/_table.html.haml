.row.top20
  .col-sm-12
    - @counters.each do |c|
      - klass = 'btn-default'
      - klass = 'btn-primary' if @counter.id == c.id
      - klass = 'disabled' unless c.current_tariff
      = link_to c.title, meterings_path(counter_id: c.id), class: "btn #{klass} btn-sm"

.row
  .col-sm-12
    - if @items.any?
      %table.table.table-stripped.table-hover
        %thead
          %tr
            %th #
            %th.col-sm-3 Дата
            %th.col-sm-3 Показание
            %th.col-sm-3 Тариф
            %th.col-sm-3 Итого
        %tbody
          - @items.each_with_index do |item, index|
            %tr
              %td= index+1
              %td= link_to item.date, metering_path(item.id)
              %td= link_to item.value, metering_path(item.id)
              %td= item.tariff.full_title
              %td= item.total.round(2)

    - else
      %p Нет показаний

.row
  .col-sm-12.top20
    = link_to "Добавить", new_metering_path(counter_id: @counter.id), class: "btn btn-success btn-sm"
